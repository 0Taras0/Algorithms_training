<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GraphVisualizer" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0">
            <StackPanel Orientation="Horizontal" Background="#eee" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Ребро" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBox x:Name="EdgeInput" Width="80" FontSize="16" VerticalContentAlignment="Center" KeyDown="EdgeInput_KeyDown"/>
                </StackPanel>
                <Button Content="Додати ребро" Style="{StaticResource ButtonStyle}" Click="AddEdge_Click"/>

                <Button Content="Запустити BFS" Style="{StaticResource ButtonStyle}" Click="BFSButton_Click"/>
                <Button Content="Запустити DFS" Style="{StaticResource ButtonStyle}" Click="DFSButton_Click"/>

                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Початкова вершина" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBox x:Name="StartNodeSearch" Width="80" FontSize="16" VerticalContentAlignment="Center" PreviewTextInput="IsDigit_PreviewTextInput"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Кінцева вершина" FontSize="14" HorizontalAlignment="Center" />
                    <TextBox x:Name="EndNodeSearch" Width="80" FontSize="16" VerticalContentAlignment="Center" PreviewTextInput="IsDigit_PreviewTextInput"/>
                </StackPanel>

                <Button Content="Очисити граф" Style="{StaticResource ButtonStyle}" Click="ClearGraph_Click"/>
            </StackPanel>
        </Viewbox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0" Stretch="Uniform">
                <TextBox x:Name="ResultTextBox" Width="300" Height="450" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Background="LightGray"/>
            </Viewbox>

            <Viewbox Grid.Column="1" Stretch="Uniform">
                <Canvas x:Name="GraphCanvas" Background="White" Width="800" Height="450"/>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
